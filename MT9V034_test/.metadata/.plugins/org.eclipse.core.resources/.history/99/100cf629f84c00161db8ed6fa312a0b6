/*
 * helloworld.c: simple test application
 */

#include <stdio.h>
#include "platform.h"
#include "xparameters.h"
#include "xiomodule.h"

void print(char *str);

int main()
{
    init_platform();

    u32 data,prevState;
    XIOModule gpi;
    XIOModule gpo;

    print("\n\rMT9V034 controller and AL422B FIFO reader\n\r");

    data = XIOModule_Initialize(&gpi, XPAR_IOMODULE_0_DEVICE_ID);
    data = XIOModule_Start(&gpi);

    while(1)
    {
    	data = XIOModule_DiscreteRead(&gpi,2);
    	if (prevState != data)
    		if(data == 1)
    			print("Reading from FIFO...\n\r");

    	prevState = data;
    }
    cleanup_platform();

    return 0;
}
